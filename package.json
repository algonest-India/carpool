{
  "name": "carpool-connect",
  "version": "1.0.0",
  "description": "A modern carpooling web application that connects drivers and passengers for shared rides",
  "main": "server.js",
  "type": "module",
  "author": "Carpool Connect Team",
  "license": "MIT",
  "keywords": ["carpool", "rideshare", "transport", "nodejs", "express", "supabase"],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/carpool-connect"
  },
  "bugs": {
    "url": "https://github.com/your-username/carpool-connect/issues"
  },
  "homepage": "https://github.com/your-username/carpool-connect#readme",
  
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:apply": "node scripts/apply_sql.js database/populate_trip_points.sql",
    "db:populate-points": "node scripts/populate_points.js",
    "lint": "eslint . --ext .js,.mjs --cache",
    "format": "prettier --write .",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --detectOpenHandles"
  },
  
  "dependencies": {
    "pg": "^8.11.0",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.0",
    "bootstrap": "^5.3.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.2",
    "leaflet": "^1.9.4",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.46.0",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "@vercel/node": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
